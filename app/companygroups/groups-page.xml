<Page navigatingTo="onNavigatingTo" class="page" xmlns="http://schemas.nativescript.org/tns.xsd" >
    <ActionBar class="action-bar" />
    
    <GridLayout columns="*" rows="auto, *" height="100%" width="100%">
        <StackLayout row="0" col="0" verticalAlignment="top" horizontalAlignment="center">
            <SearchBar id="searchBar" hint="Search" text="" loaded="onSearchBarLoaded" submit="onSubmit" clear="onClear" />
        </StackLayout>
        <StackLayout row="1" col="0" verticalAlignment="top">
            <ListView id="groupsListView" items="{{ groupsList }}" itemLoading="onItemLoading" itemTap="onItemTap" loadMoreItems="onLoadMoreItems" height="100%">
                <ListView.itemTemplate>
                    <AbsoluteLayout>
                        <!-- BACKGROUND: Swipe Actions -->
                        <GridLayout columns="*, 80" android:rows="48" ios:rows="55" width="100%">
                            <Label col="0" />
                            <GridLayout col="1" columns="*" rows="*, auto, auto, *" tap="onRemarkClick" class="swipe-icons green">
                                <Label row="0" col="0" text="" />
                                <Label row="1" col="0" text="&#xf075;" class="tab-icon" />
                                <Label row="2" col="0" text="Remark" class="tab-label" />
                                <Label row="3" col="0" text="" />
                            </GridLayout>
                        </GridLayout>
                        <!-- FOREGROUND: List View Item Details -->
                        <StackLayout loaded="onLayoutLoaded" backgroundColor="white" width="100%">
                            <GridLayout columns="*, auto" rows="*" class="list-view-item">
                                <StackLayout row="0" col="0" verticalAlignment="middle">
                                    <Label text="{{ companyName }}" class="list-view-item-main-top" />
                                    <Label text="{{ membershipType }}" textWrap="true" class="list-view-item-sub" />
                                </StackLayout>
                                <Label row="0" col="1" text="&#xf105;" class="fn-list-view-item" verticalAlignment="middle" />
                            </GridLayout>
                        </StackLayout>
                    </AbsoluteLayout>
                </ListView.itemTemplate>
            </ListView>
        </StackLayout>
        <ActivityIndicator busy="{{ isLoading }}" android:height="25%" android:width="25%" ios.activityIndicatorViewStyle="whiteLarge" rowSpan="2" colSpan="1" />
    </GridLayout>
</Page>
